{
    "manifest_version": 2,
    "name": "PureGuard - Offline Porn Blocker",
    "version": "1.0.0",
    "description": "A privacy-first, offline-capable adult content blocker for your peace of mind.",
    "browser_specific_settings": {
        "gecko": {
            "id": "pureguard@example.com",
            "strict_min_version": "113.0"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background/service_worker.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content_script.js"
            ],
            "css": [
                "content/styles.css"
            ],
            "run_at": "document_start"
        }
    ],
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}